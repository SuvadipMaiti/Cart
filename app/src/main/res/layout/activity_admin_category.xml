<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new product"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>



    <LinearLayout
        android:id="@+id/linear_layout_category1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true">


        <ImageView
            android:id="@+id/cat_t_shirts"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/tshirts"/>

        <ImageView
        android:id="@+id/cat_mobiles"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/mobiles"/>

        <ImageView
            android:id="@+id/cat_books"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/books"/>
        <ImageView
            android:id="@+id/cat_laptops"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/laptops"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_category2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_category1"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true">


        <ImageView
            android:id="@+id/cat_shoess"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/shoess"/>

        <ImageView
            android:id="@+id/cat_sweathers"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sweather"/>

        <ImageView
            android:id="@+id/cat_sports"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sports"/>
        <ImageView
            android:id="@+id/cat_watches"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/watches"/>

    </LinearLayout>

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:text="Log out"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/buttons"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linear_layout_category2"/>

</RelativeLayout>